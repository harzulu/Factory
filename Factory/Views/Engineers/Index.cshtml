@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Engineer>

<h1>Your Engineers:</h1>
<hr>
@if (@Model.Count == 0)
{
  <h3>No engineers have been added yet!</h3>
}

@foreach (Engineer engineer in Model)
{
  <p class="names">@Html.ActionLink($"{engineer.Name}", "Details", new { id = engineer.EngineerId })</p> <br>
}

<nav class="navbar navbar-light">  
  <div class="container-fluid" id="nav-background">  
    <ul class="nav navbar-nav">
      <button type="button" class="btn btn-dark">
        <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span><li>@Html.ActionLink("Add new engineer", "Create")</li>  
      </button>
    </ul>
  </div>
</nav>