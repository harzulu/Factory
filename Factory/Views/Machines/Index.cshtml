@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>

<h1>Your Machines:</h1>
<hr>
@if (@Model.Count == 0)
{
  <h3>No machines have been added yet!</h3>
}

@foreach (Machine machine in Model)
{
  <p class="names">@Html.ActionLink($"{machine.Name}", "Details", new { id = machine.MachineId })</p> <br>
}

<nav class="navbar navbar-light">  
  <div class="container-fluid" id="nav-background">  
    <ul class="nav navbar-nav">
      <button type="button" class="btn btn-dark">
        <span class="glyphicon glyphicon-floppy-disk" aria-hidden="true"></span><li>@Html.ActionLink("Add new machine", "Create")</li>  
      </button>
    </ul>
  </div>
</nav>